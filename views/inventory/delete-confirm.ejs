<!-- This is the content heading -->
<% if (title) {%>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error=> { %>
        <li>
            <%= error.msg %>
        </li>
    <% }) %>
    </ul>
<% } %>

<p class="alert">Confirm Deletion - The delete is permanent.</p>

<form id="delete-inventory-form" action="/inv/delete/" method="post">
    <fieldset>
        <legend>Vehicle Information</legend>
        <label for="inv_make">
            Make:
            <input type="text" name="inv_make" id="inv_make" required value="<%= locals.inv_make %>" readonly>
        </label>
        <label for="inv_model">
            Model:
            <input type="text" name="inv_model" id="inv_model" required value="<%= locals.inv_model %>" readonly>
        </label>
        <label for="inv_year">
            Year:
            <input type="number" name="inv_year" id="inv_year" required min="1900" max="2027" value="<%= locals.inv_year %>" readonly>
        </label>
        <label for="inv_price">
            Price:
            <input type="number" name="inv_price" id="inv_price" required value="<%= locals.inv_price %>" readonly>
        </label>
    </fieldset>

    <input type="submit" class="submitBtns" id="grabme" value="Delete <%=locals.inv_make %> <%=locals.inv_model%>">
    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%=locals.inv_id %>"<% } %>>
</form>