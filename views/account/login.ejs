<% if (title) {%>
    <h1>
        <%= title %>
    </h1>
<% } else { res.redirect('/') } %>

<script src="/js/show_password.js" defer></script>

<%- messages() %> 

<form id="login" action="/account/login" method="post">
    <label for="account_email">
        Email:
        <input id="account_email" name="account_email" title="Email" type="email" required value="<%= locals.account_email %>">
    </label>
    <label for="account_password">
        Password:
            <div class="show_password">
                <input type="password" name="account_password" class="account_password" required title="Password"
                    pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
                <img id="showOrHide" src="/images/password/eye.svg" alt="Show Password">
            </div>    </label>
    <div>Password Requirments: 12 characters minimum, 1 capital letter, 1 number, 1 special character</div>
    <input type="submit" value="Login" id="login_submit" class="submitBtns">
</form>

<p class="signup">No account? <a href="/account/signup">Sign Up</a></p>