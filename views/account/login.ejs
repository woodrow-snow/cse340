<% if (title) {%>
    <h1>
        <%= title %>
    </h1>
<% } else { res.redirect('/') } %>

<%# message() //for flash messages %> 

<form id="login">
    <label for="account_email">
        Email:
        <input id="account_email" name="account_email" title="Email" type="email" required>
    </label>
    <label for="account_password">
        Password:
        <input id="account_password" name="account_password" title="Password" type="password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    </label>
    <div>Password Requirments: 12 characters minimum, 1 capital letter, 1 number, 1 special character</div>
    <input type="submit" value="Login" id="login_submit">
</form>

<p class="signup">No account? <a href="/account/signup">Sign Up</a></p>