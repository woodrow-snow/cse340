<% if (title) {%>
    <h1>
        <%= title %>
    </h1>
<% } else { res.redirect('/') } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error=> { %>
        <li>
            <%= error.msg %>
        </li>
    <% }) %>
    </ul>
<% } %>

<h2>Welcome <%= accountData.account_firstname%></h2>
<a href="/account/update/<%= locals.accountData.account_id %>">Update Account Information</a>

<% if(locals.accountData.account_type !=='Client' ) { %>
    <h3>Inventory Management</h3>
    <p><a href="/inv/">Update Inventory</a></p>
<% } %>

